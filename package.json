{
    "scripts": {
        "dfx_install": "DFX_VERSION=0.14.2 sh -ci \"$(curl -fsSL https://sdk.dfinity.org/install.sh)\"",
        "replica_start": "dfx start --background",
        "replica_stop": "dfx stop",
        "canister_deploy_local": "dfx deploy CryptoCanvas",
        "canister_deploy_mainnet": "dfx deploy --network ic CryptoCanvas",
        "canister_uninstall": "dfx canister uninstall-code CryptoCanvas",
        "canister_call_get_message": "dfx canister call CryptoCanvas getMessage",
        "canister_call_set_message": "dfx canister call CryptoCanvas setMessage '(\"Hello world!\")'"
    },
    "dependencies": {
        "@connect2ic/core": "^0.2.0-beta.5",
        "@connect2ic/react": "^0.2.0-beta.5",
        "azle": "^0.17.1"
    }
}
